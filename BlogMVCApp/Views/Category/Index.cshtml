@model IEnumerable<BlogMVCApp.Models.CategoryViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center text-muted">Kategori Listesi</h2>

<p>
    @Html.ActionLink("Yeni Kategori", "Create", null, new { @class = "btn btn-sm btn-info" })
</p>
<hr />
<table class="table table-striped table-hover  table-sm">
    <tr>
        <th style="width:65%">
            @Html.DisplayName("Kategori Adı")
        </th>
        <th style="width:15%">
            @Html.DisplayName("Blog Sayısı")
        </th>
        <th style="width:140px;" class="text-lg-right"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.KategoriAdi)
            </td>
            <td>@Html.DisplayFor(modelitem => item.BlogSayisi)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Category.Id },new { @class="btn btn-sm btn-success"})
                @Html.ActionLink("Details", "Details", new { id = item.Category.Id },new { @class="btn btn-sm btn-info"})
                @Html.ActionLink("Delete", "Delete", new { id = item.Category.Id },new { @class="btn btn-sm btn-danger"})
            </td>

        </tr>
    }

</table>
