@model IEnumerable<BlogMVCApp.Models.CategoryViewModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center text-muted">Kategori Listesi</h2>
@if (TempData["kategori"] != null)
{
    var ktg = TempData["kategori"] as BlogMVCApp.Models.Category;
    <div class="alert alert-info">
        <strong><i class="fa fa-info fa-5x"></i> @ktg.KategoriAdi</strong> adlı kategori başarılı bir şekilde güncellenmiştir!
    </div>
}

<p>
    <a href="@Url.Action("Create","Category")" class="btn btn-sm btn-success"><i class="fa fa-plus"></i> Yeni Kategori</a>
</p>
<hr />
<table class="table table-striped table-hover  table-sm">
    <tr>
        <th style="width:65%">
            @Html.DisplayName("Kategori Adı")
        </th>
        <th style="width:15%">
            @Html.DisplayName("Blog Sayısı")
        </th>
        <th style="width:140px;" class="text-lg-right"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.KategoriAdi)
            </td>
            <td>@Html.DisplayFor(modelitem => item.BlogSayisi)</td>
            <td class="text-center">
                <a title="Edit" href="@Url.Action("Edit","Category",new {id=item.Category.Id})" class="text-warning"><i class="fa fa-edit"></i></a>&nbsp;&nbsp;&nbsp;
                <a title="Details" href="@Url.Action("Details","Category",new {id=item.Category.Id})" class="text-info"><i class="fa fa-info"></i></a>&nbsp;&nbsp;&nbsp;
                <a title="Delete" href="@Url.Action("Delete","Category",new {id=item.Category.Id})" class="text-danger"><i class="fa fa-trash"></i></a>
            </td>

        </tr>
    }

</table>
<script>
    $(function () {
        function explode() {
            $(".alert").hide();
        }
        setTimeout(explode, 5000);
    });
</script>